<div class="page-header">
  <h2>
  <%= @project.name %>
  <small><%= @project.short_description %></small>
  </h2>
</div>

<p id="notice"><%= notice %></p>

<p>
  <%= @project.description %>
</p>

<% @channels.each do |channel| %>
  <h3><%= channel.name  %> Versions</h3>

  <%= render :partial => "versions/project_versions", 
            :locals => {:project => @project, :versions => @project.versions.for_channel(channel), :channel => channel}  %>
<% end %>

<div class="well">
  <%= link_to "New Versions", new_project_version_path(@project), :class => "btn primary" %> 
  <%= link_to "Edit Project", edit_project_path(@project), :class => "btn" %> 
  <%= link_to "Back to Projects", projects_path, :class => "btn" %>
</div>




