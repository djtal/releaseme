<div class="page_header">
  <h2>
    <%= @project.name %> : v<%= @version.version %>
    <small><%= @version.channel.name %></small>
  </h2>
</div>

<p id="notice"><%= notice %></p>

<h3>General informations</h3>
<div>
  <% if @version.require_label? %>
    <strong>This version require a label delivery</strong>
  <% else %>
    No label are required.
  <% end %>
  <p>
    <%= @version.description %>
  </p>
</div>


<h3>Deliveries</h3>
<div class="row">
  <div class="span6">
    <h4>Status</h4>
    <table class="zebra-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%= render :partial => "application", :collection => @applications %>
      </tbody>
    </table>
  </div>
  <div class="span10">
    <h4>History</h4>
  </div>
</div>

<div class="well">
  <%= link_to "Back to #{@project.name}", project_path(@project), :class => "btn" %>
</div>