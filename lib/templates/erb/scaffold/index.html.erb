<div class="page-header">
  <h2>Listing <%= plural_name %></h2>
</div>


<table class="zebra-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%% @<%= plural_name %>.each do |<%= singular_name %>| %>
      <tr>
        <td><%%= link_to <%= singular_name %>.name, <%= singular_name %>_path(@<%= singular_name %>) %></td>
        <td><%%= link_to 'Edit', edit_<%= singular_name %>_path(channel) %>&nbsp;|&nbsp;
        <%%= link_to 'Destroy', <%= singular_name %>, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <%% end %>
  </tbody>
</table>

<div class="well">
  <%%= link_to 'New <%= singular_name %>', new_<%= singular_name %>_path, :class => "btn primary" %>
</div>
